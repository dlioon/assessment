{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/applications/src",
  "monorepo": true,
  "root": "applications/gateway",
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      "*.env",
      "*.env.test",
      "**/*.hbs",
      "i18n/locales/**/*"
    ]
  },
  "projects": {
    "elasticsearch": {
      "type": "library",
      "root": "libs/elasticsearch",
      "entryFile": "index",
      "sourceRoot": "libs/elasticsearch/src",
      "compilerOptions": {
        "tsConfigPath": "libs/elasticsearch/tsconfig.lib.json"
      }
    },
    "common-errors": {
      "type": "library",
      "root": "libs/common-errors",
      "entryFile": "index",
      "sourceRoot": "libs/common-errors/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common-errors/tsconfig.lib.json"
      }
    },
    "command": {
      "type": "library",
      "root": "libs/command",
      "entryFile": "index",
      "sourceRoot": "libs/command/src",
      "compilerOptions": {
        "tsConfigPath": "libs/command/tsconfig.lib.json"
      }
    }
  }
}